<Page x:Class="GosAutoInspection.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GosAutoInspection"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Width="auto">
                <TextBlock Text="Логин: " 
                           Style="{StaticResource mainTxtb}"
                           Width="70"/>
                <TextBox x:Name="LoginTxtb" Style="{StaticResource mainTxt}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль: " Style="{StaticResource mainTxtb}"
                           Width="70"/>
                <TextBox x:Name="PasswordTxtb" Style="{StaticResource mainTxt}"/>
            </StackPanel>
            <Button Name="AuthBtn" 
                    Click="AuthBtn_Click" 
                    Content="Войти" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Style="{StaticResource mainBtn}"/>
        </StackPanel>
    </Grid>
</Page>
